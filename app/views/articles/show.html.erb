<div class="container">
  <div class="row mt-2">
    <div class="col-8">
      <div class="article">
        <h2>
          <%=@article.title%>
        </h2>
          <i><%= link_to '', edit_article_path, class: 'fa fa-pencil btn btn-success m-3 p-2' %></i>
          <i><%= link_to '', article_path(@article), method: :delete, class: 'fa fa-trash-o btn btn-danger m-3 p-2' %></i>
        <p>
          <%=@article.content%>...
        </p>
      </div>
    </div>
  </div>
</div>
